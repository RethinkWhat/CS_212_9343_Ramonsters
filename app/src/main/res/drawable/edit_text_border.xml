<!-- res/drawable/edit_text_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#fff" /> <!-- Set the background color -->
            <corners android:radius="8dp" /> <!-- Set the corner radius for a rounded rectangle -->
        </shape>
    </item>
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#fff" /> <!-- Set the background color to blue -->
            <corners android:radius="8dp" /> <!-- Set the same corner radius as the background -->
        </shape>
    </item>
</layer-list>
