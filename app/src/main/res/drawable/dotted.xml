<!-- res/drawable/rounded_rectangle_button.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Layer 1: Rectangle with Circular Corners (Background) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" /> <!-- Adjust the radius for rounded corners -->
            <solid android:color="@color/lightPink" /> <!-- Use the desired background color -->
        </shape>
    </item>

    <!-- Layer 2: Dashed Border -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <stroke
                android:color="@color/lightPurple"
            android:width=".6dp"
            android:dashWidth="8dp"
            android:dashGap="4dp"
            />
            <corners android:radius="20dp" /> <!-- Adjust the radius for rounded corners -->
        </shape>
    </item>

</layer-list>
