<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- res/layout/item_tutor.xml -->

    <Button
        android:id="@+id/viewDetailsButton"
        android:layout_width="102dp"
        android:layout_height="30dp"
        android:layout_marginLeft="225dp"
        android:layout_marginTop="110dp"
        android:textSize="7dp"
        android:text="VIEW DETAILS"
        android:fontFamily="@font/dmsansextrabold"
        android:backgroundTint="@color/darkPurple"
        />

    <TextView
        android:id="@+id/tutor"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:textSize="20dp"
        android:fontFamily="@font/dmsansextrabold"
        android:text="Tutor Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tutorLocation"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/dmsans"
        android:text="Location"
        android:textColor="@color/darkPurple"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/specialization1"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="303dp"
        android:background="@drawable/edit_text_border"
        android:backgroundTint="@color/semiGray"
        android:fontFamily="@font/dmsans"
        android:gravity="center"
        android:text="Specialization 1"
        android:textAlignment="center"
        android:textColor="@color/tGray"
        android:textSize="8dp" />

    <TextView
        android:id="@+id/specialization2"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="117dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="206dp"
        android:background="@drawable/edit_text_border"
        android:backgroundTint="@color/semiGray"
        android:fontFamily="@font/dmsans"
        android:gravity="center"
        android:text="Specialization 2"
        android:textAlignment="center"
        android:textColor="@color/tGray"
        android:textSize="8dp" />

    <TextView
        android:id="@+id/specialization3"
        android:layout_width="88dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="255dp"
        android:background="@drawable/edit_text_border"
        android:backgroundTint="@color/semiGray"
        android:fontFamily="@font/dmsans"
        android:gravity="center"
        android:text="Specialization 3"
        android:textAlignment="center"
        android:textColor="@color/tGray"
        android:textSize="8dp" />

    <ImageView
        android:id="@+id/tutorImageView"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="230dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="89dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="83dp"
        tools:srcCompat="@tools:sample/avatars" />


</RelativeLayout>